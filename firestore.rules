rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users: Allow read/write for development (TEMPORARY - restrict in production!)
    match /users/{userId} {
      allow read, write, create: if true; // Open for development/seeding
      // TODO: In production, change to:
      // allow read: if isAuthenticated();
      // allow write: if isOwner(userId);
    }

    // Projects: Allow read/write for development (TEMPORARY - restrict in production!)
    match /projects/{projectId} {
      allow read, write, create: if true; // Open for development/seeding
      // TODO: In production, change to: if isAuthenticated();

      match /installments/{installmentId} {
        allow read, write, create: if true; // Open for development/seeding
      }

      match /change_requests/{crId} {
        allow read, write, create: if true; // Open for development/seeding
      }
    }

    // Invites: Public read allowed (to verify token), Write only by authenticated (admin)
    match /invites/{inviteId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
  }
}
